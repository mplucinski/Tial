@TIAL_PACKAGE_INIT@

find_package(Boost 1.55.0 REQUIRED)

set_property(TARGET TialUtility APPEND PROPERTY INTERFACE_INCLUDE_DIRECTORIES "${Boost_INCLUDE_DIRS}")

if(CMAKE_CXX_COMPILER_ID STREQUAL "Clang" AND CMAKE_SYSTEM_NAME STREQUAL "Windows")
	find_package(TialUtilityStdCompat REQUIRED)
	get_property(INCLUDE_DIR TARGET TialUtilityStdCompat
		PROPERTY INTERFACE_INCLUDE_DIRECTORIES)
	target_include_directories(TialUtility PUBLIC
		"${INCLUDE_DIR}/TialUtilityStdCompat/compat")
	target_link_libraries(TialUtility PUBLIC TialUtilityStdCompat)
endif()
